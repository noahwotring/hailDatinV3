<!DOCTYPE html>
<html>
  <head>
    <title>HailDatinV3</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
    table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 50%%; }
    td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
    }

    tr:nth-child(even) {
    background-color: #dddddd;
    }
    </style>
  </head>

  <body>
    <div class="ui grid">
    <div class="row">
      <div class="fourteen wide centered column">
        <h2 class="ui header">
          <i class="mail icon"></i>
          <div class="content">
            Messages
          </div>
        </h2>
        <div class="ui purple inverted menu">
          <i class="home icon"></i><%= link_to "Home", root_path, class: "item" %>
            <% if current_user %>
              <%= link_to "Mailbox", conversations_path, class: "item" %>
              <div class="right menu">
                <%= link_to 'Sign Out', logout_path, class: "item" %>
              </div>
            <% else %>
              <div class="right menu">
                <%= link_to 'Sign Up', new_user_path, class: "item" %>
                <%= link_to "Sign-In", login_path, class: "item" %>
              </div>
            <% end %>
        </div>
    <% if current_user %>
    <p>Welcome, <%= current_user.username %> </p>
    <p><%= link_to "Logout", logout_url %></p>
    <% else %>
    <% link_to "Login", new_session_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
